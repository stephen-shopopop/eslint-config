{
  "name": "@stephen-shopopop/eslint-config",
  "version": "1.0.0",
  "description": "eslint config nodejs typescript",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "private": true,
  "engine": {
    "node": ">=14.16.1",
    "npm": ">=6.14.12"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephen-shopopop/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/stephen-shopopop/eslint-config/issues"
  },
  "contributors": [
    "stephendltg"
  ],
  "scripts": {
    "lint": "eslint . --config=index.js",
    "test": "jest --reporters=default",
    "lint": "npx standard --verbose | snazzy",
    "lint:fix": "npx standard --fix",
    "release": "standard-version",
    "prerelease": "standard-version -- --prerelease",
    "fix": "standard-version -- --release-as minor",
    "doc": "rimraf out && jsdoc src"
  },
  "simple-git-hooks": {
    "pre-commit": "npx commitlint --edit $1 & npm run lint"
  },
  "standard": {
    "ignore": [
      "out/",
      "jest.config.js"
    ]
  },
  "keywords": [
    "eslint"
  ],
  "author": "stephen-shopopop<stephen-deletang@shopopop.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "chai": "^4.3.4",
    "eslint": "^8.11.0",
    "jest": "^27.5.0",
    "jsdoc": "^3.6.10",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "snazzy": "^9.0.0",
    "standard": "^16.0.4",
    "standard-version": "^9.3.2"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "17.0.0-0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-jsonc": "^2.0.0",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security-node": "^1.1.1",
    "eslint-plugin-unicorn": "^40.1.0",
    "eslint-plugin-yml": "^0.12.0",
    "jest": "^27.4.5",
    "jsonc-eslint-parser": "^2.1.0",
    "yaml-eslint-parser": "^0.5.0"
  }
}
